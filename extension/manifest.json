{
  "name": "Netflixer",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Netflix Interfacer",
  "content_scripts": [{
    "matches": ["https://www.netflix.com/*","http://www.netflix.com/*","http://netflix.com/*","https://netflix.com/*"],
    "js": ["build/content.js"],
    "run_at": "document_end"
  }],
  "permissions": [
    "management"
  ],
  "background": {
    "scripts": ["build/background.js"]
  },
  "icons": {
    "16": "assets/icon-16.png",
    "128": "assets/icon-128.png"
  }
}

